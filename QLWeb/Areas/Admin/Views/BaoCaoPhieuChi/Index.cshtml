@model IEnumerable<Common.ViewModels.BaoCaoPhieuChiViewModel>
@using Common.ViewModels
@{
    ViewBag.Title = "Danh sách báo cáo phiếu chi";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}
<section id="page-content">
    <div class="header-content">
        <div class="breadcrumb-wrapper hidden-xs">
            <button class="btn btn-lg btn-success btn-xs btn-push" id="submit"><i class="glyphicon glyphicon-save"></i>@Html.ActionLink("Xuất EXCEL", "XuatExcel", "BaoCaoPhieuChi")</button>
            <button class="btn btn-lg btn-success btn-xs btn-push" id="print"><i class="glyphicon glyphicon-print"></i>@Html.ActionLink("Xuất PDF", "XuatPdf", "BaoCaoPhieuChi")</button>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Danh sách báo cáo phiếu chi</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        @using (Ajax.BeginForm("DanhSachBaoCaoPhieuChi", "BaoCaoPhieuChi", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }))
                        {
                            <div class="form-group">
                                <div class="col-md-6">
                                    <label>Từ ngày</label>
                                    <input type="date" id="dateFrom" name="dateFrom" data-date-format="dd/mm/yyyy" required class="form-control rounded" />
                                </div>
                                <div class="col-md-6">
                                    <label>Đến ngày</label>
                                    <div class="input-group">
                                        <input type="date" id="dateTo" name="dateTo" required class="form-control rounded" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                        <div class="form-body">
                            
                            <div id="list">
                                @{Html.RenderAction("DanhSachBaoCaoPhieuChi", "BaoCaoPhieuChi");}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
