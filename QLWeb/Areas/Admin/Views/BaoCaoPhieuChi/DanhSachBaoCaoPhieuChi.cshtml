@using PagedList.Mvc
@model PagedList.IPagedList<Common.ViewModels.BaoCaoPhieuChiViewModel>
<br />
<table class="table table-bordered table-middle table-lilac">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayName("Mã báo cáo phiếu chi")
            </th>
            <th class="text-center">
                @Html.DisplayName("Ngày chi")
            </th>
            <th class="text-center">
                @Html.DisplayName("Ghi chú")
            </th>
            <th class="text-center">
                @Html.DisplayName("Tổng tiền")
            </th>
            
            <th class="text-center">
                Hành động
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
        <tr style="text-align:center" class="border-warning">
            <td>@item.maBaoCaoPhieuChi</td>
            <td>@item.ngayChi</td>
            <td>@item.ghiChu</td>
            <td>@item.tongTien</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
<div class="pull-left" style="padding-top:20px">
        <h3 class="panel-title">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</h3>
    </div>
    <div class="pull-right">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
<script src="~/Scripts/bootstrap.min.js"></script>