@model int
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="../Content/assets/admin/css/login/style.css" />
    <title>Đăng nhập Admin</title>
</head>

<body>
    <center>
        <form method="post" action="Index">
            <table>
                <tr>
                    <td colspan="2" class="td">
                        Đăng nhập
                    </td>
                </tr>

                <tr>
                    <td colspan="2" class="td">
                        <input type="text" placeholder="Nhập tài khoản" name="UserName" />
                    </td>
                </tr>

                <tr>
                    <td colspan="2" class="td">
                        <input type="password" placeholder="Nhập mật khẩu" name="PassWord" />
                    </td>
                </tr>

                <tr>
                    <td colspan="2" class="td">
                        <input type=submit name="btnsubmit" class="submit" value="Đăng nhập">
                    </td>
                </tr>
            </table>
            @if (Model == 3)
            {
                <p>Tài khoản hoặc mật khẩu không đúng</p>
            }
            @if (Model == 2)
            {
                <p>Chúc mừng bạn đăng nhập thành công</p>
                @*<meta http-equiv="refresh" content="2;http://localhost:8166/Home">*@
            }
        </form>
    </center>
</body>
</html>
