@model IEnumerable<Common.ViewModels.BaoCaoHangHoaViewModel>
@using Common.ViewModels
@{
    ViewBag.Title = "Danh sách báo cáo hàng hóa";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}
<section id="page-content">
    <div class="header-content">
        <div class="breadcrumb-wrapper hidden-xs">
            <button class="btn btn-lg btn-success btn-xs btn-push" id="submit"><i class="glyphicon glyphicon-print"></i>@Html.ActionLink("Xuất EXCEL", "XuatExcel", "BaocaoHangHoa")</button>
            <button class="btn btn-lg btn-success btn-xs btn-push" id="print"><i class="glyphicon glyphicon-print"></i>@Html.ActionLink("Xuất PDF", "XuatPdf", "BaoCaoHangHoa")</button>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Danh sách báo cáo hàng hóa</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="form-body">
                 <div class="form-group">

                                    <label for="gender" class="col-sm-2 control-label">Tên sản phẩm</label>
                                    <div class="col-sm-12">
                                        <select  id="maHangHoa" class="chosen-select">
                                           

                                            @foreach (var item in ViewBag.danhSachHangHoa)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>

                                </div>
                            <div class="clearfix"></div>
                            

                            <div id="list">
                                @{Html.RenderAction("DanhSachBaoCaoHangHoa", "BaoCaoHangHoa");}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#maHangHoa').on("change", function () {
            $.getJSON('/BaoCaoHangHoa/DanhSachBaoCaoHangHoa',
                { id: $('#maHangHoa').val() },
                function (data) {
                    if (data != null) {
                        $.each(data, function (index, row) {
                            $("#tenHangHoa").val(row.TenHangHoa);
                            
                        });
                    }
                });
        });
    })
</script>