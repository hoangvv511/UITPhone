@model IEnumerable<Common.ViewModels.BaoCaoHangHoaViewModel>
<br />
<table class="table table-bordered table-middle table-lilac">
    <thead>
        <tr>

            <th class="text-center">
                @Html.DisplayName("Tên hàng hóa")
            </th>
            <th class="text-center">
                @Html.DisplayName("ModelName")
            </th>
            <th class="text-center">
                @Html.DisplayName("Tên loại hàng hóa")
            </th>
            <th class="text-center">
                @Html.DisplayName("Giá bán")
            </th>
            <th class="text-center">
                @Html.DisplayName("Giảm giá")
            </th>
            <th class="text-center">
                @Html.DisplayName("Trạng thái")
            </th>
            <th class="text-center">
                @Html.DisplayName("Số lượng tồn")
            </th>
           

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center" class="border-warning">
                <td>@item.tenHangHoa</td>
                <td>@item.modelName</td>
                <td>@item.tenLoaiHangHoa</td>
                <td>@item.giaBan</td>
                <td>@item.giamGia</td>
                @if (@item.trangThai)
                {
                <td>Đang kinh doanh</td> }
                else
                {<td>Ngừng bán</td>}
                <td>@item.soLuongTon</td>
            </tr>
        }
    </tbody>
</table>
<script src="~/Scripts/bootstrap.min.js"></script>